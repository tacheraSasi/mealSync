{
  "name": "mealsync-server",
  "version": "1.0.0",
  "description": "Node.js/Express TypeScript server for office lunch menu management",
  "main": "dist/server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:ts": "ts-node src/server.ts",
    "seed": "ts-node src/seeders/index.ts seed",
    "seed:clear": "ts-node src/seeders/index.ts clear",
    "seed:refresh": "ts-node src/seeders/index.ts refresh",
    "sms:test": "ts-node scripts/sms-test.ts test",
    "sms:send": "ts-node scripts/sms-test.ts send"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "lunch-management",
    "meal-planning",
